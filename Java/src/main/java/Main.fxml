<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.text.Text?>

<GridPane fx:controller="go.universe.jar.Controller" 
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="15">

	<padding>
		<Insets top="30" right="20" bottom="20" left="20"/>
	</padding>

	<columnConstraints>
		<ColumnConstraints hgrow="sometimes" />
		<ColumnConstraints hgrow="sometimes" />
		<ColumnConstraints hgrow="always" />
	</columnConstraints>

	<rowConstraints>
		<RowConstraints vgrow="sometimes" />
		<RowConstraints vgrow="sometimes" />
		<RowConstraints vgrow="sometimes" />
		<RowConstraints vgrow="always" valignment="bottom"/>
	</rowConstraints>

	<children>
		<Label
			text="URL"
			GridPane.columnIndex="0" GridPane.rowIndex="0"
			GridPane.columnSpan="1"/>


		<TextField fx:id="url"
			text=""
			editable="false"
			GridPane.columnIndex="1" GridPane.rowIndex="0"
			GridPane.columnSpan="2"/>


		<Label text="Port"
			GridPane.columnIndex="0" GridPane.rowIndex="1"
			GridPane.columnSpan="1"/>

		<TextField fx:id="port"
			text="9000"
			GridPane.columnIndex="1" GridPane.rowIndex="1"
			GridPane.columnSpan="2"/>

		<Label text="Status"
			GridPane.columnIndex="0" GridPane.rowIndex="2"
			GridPane.columnSpan="1"/>

		<Label fx:id="status"
			text="Stopped"
			GridPane.columnIndex="1" GridPane.rowIndex="2"
			GridPane.columnSpan="2"/>

		<Button fx:id="stopstart"
			text="Start"
			onAction="#onStopStart"
			GridPane.columnIndex="0" GridPane.rowIndex="3"/>

	</children>
</GridPane>
